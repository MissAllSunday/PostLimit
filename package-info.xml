<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>Suki:PostLimit</id>
	<name>PostLimit</name>
	<version>1.1</version>
	<type>modification</type>
	<install for="2.1 - 2.1.99">
		<license type="inline" parsebbc="false">
			This Source Code Form is subject to the terms of the Mozilla Public
			License, v. 2.0. If a copy of the MPL was not distributed with this
			file, You can obtain one at https://mozilla.org/MPL/2.0/.
		</license>
		<credits url="https://missallsunday.com" license="MPL-2.0" copyright="Michel Mendiola" licenseurl="https://mozilla.org/MPL/2.0/">
			PostLimit mod
		</credits>
		<readme parsebbc="true">readme.txt</readme>
		<code>installCheck.php</code>
		<database>install.php</database>
<!--		<modification>PostLimit.xml</modification>-->
		<require-dir name="Themes" destination="$boarddir">Theme files</require-dir>
		<require-dir name="Sources/PostLimit" destination="$sourcedir">Source files</require-dir>
		<hook hook="integrate_autoload" function="$sourcedir/PostLimit/PostLimit.php|\PostLimit\PostLimit::autoload#" reverse="true"/>
		<hook hook="integrate_admin_areas" function="$sourcedir/PostLimit/PostLimitAdmin.php|\PostLimit\PostLimitAdmin::menu#" />
		<hook hook="integrate_load_permissions" function="$sourcedir/PostLimit/PostLimitAdmin.php|\PostLimit\PostLimitAdmin::permissions#" />
		<hook hook="integrate_profile_areas" function="\PostLimit\PostLimitAdmin::permissions#" />
		<hook hook="integrate_post_start" function="\PostLimit\PostLimit::handle#" />
		<hook hook="integrate_post2_start" function="\PostLimit\PostLimit::handle#" />
		<hook hook="integrate_after_create_post" function="\PostLimit\PostLimit::updateCount#" />
<!--		@Todo: Toy with template layers to display a notification on how many posts until reaching the post limit-->
		<hook hook="integrate_post_register" function="\PostLimit\PostLimit::createCount#" />
		<hook hook="integrate_profile_areas" function="\\PostLimit\PostLimit::profile#"  />
		<redirect url="$scripturl?action=admin;area=postlimit" timeout="3000"></redirect>
	</install>

	<uninstall for="2.0 - 2.0.99">
		<hook hook="integrate_autoload" function="$sourcedir/PostLimit/PostLimit.php|\PostLimit\PostLimit::autoload#" reverse="true"/>
		<hook hook="integrate_admin_areas" function="$sourcedir/PostLimit/PostLimitAdmin.php|\PostLimit\PostLimitAdmin::menu#" reverse="true"/>
		<hook hook="integrate_load_permissions" function="$sourcedir/PostLimit/PostLimitAdmin.php|\PostLimit\PostLimitAdmin::permissions#" reverse="true"/>
		<hook hook="integrate_profile_areas" function="\PostLimit\PostLimitAdmin::permissions#" reverse="true"/>
		<hook hook="integrate_post_start" function="\PostLimit\PostLimit::handle#" reverse="true"/>
		<hook hook="integrate_post2_start" function="\PostLimit\PostLimit::handle#" reverse="true"/>
		<hook hook="integrate_after_create_post" function="\PostLimit\PostLimit::updateCount#" reverse="true"/>
		<hook hook="integrate_post_register" function="\PostLimit\PostLimit::createCount#" reverse="true"/>
		<hook hook="integrate_profile_areas" function="\\PostLimit\PostLimit::profile#"  reverse="true"/>
		<database>install.php</database>
		<remove-dir name="$sourcedir/PostLimit" />
<!--		<remove-file name="$sourcedir/tasks/PostLimit.php" />-->
		<remove-file name="$languagedir/PostLimit.english.php" />
		<remove-file name="$themedir/PostLimit.template.php" />
	</uninstall>

</package-info>